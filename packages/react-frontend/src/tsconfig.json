{
    "compilerOptions": {
      "target": "es2023",
      "module": "NodeNext",
      "baseUrl": "./src",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "NodeNext",
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules"],
    "lib": ["esnext"]
  }